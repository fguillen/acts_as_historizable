<h1>Listing tasks</h1>
<% for task in @tasks %>
  <div class="task">
    <div class="title"><%=h task.title %></div>
    <div class="description"><%=h task.description %></div>
    <div class="controls">
      <ul>
        <li><%= link_to 'Edit', edit_task_path(task) %></li>
        <li><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></li>
      </ul>
    </div>
    <div class="histories">
      <div class="histories_title">histories(<%= task.histories.count %>)</div>
      <div class="histories_list">
        <% for history in task.histories %>
          <div class="history_date"><%= history.created_at %></div>
          <div class="history_lines">
            <table>
              <% for history_line in history.history_lines %>
              <tr>
                <td class="history_line_field_name"><%= history_line.field_name%>:</td>
                <td class="history_line_field_value_was"><%= history_line.field_value_was%></td>
                <td class="history_line_field_simbol">=></td>
                <td class="history_line_field_value_actual"><%= history_line.field_value_actual%></td>
              </tr>
              <% end %>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<br />

